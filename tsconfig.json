{
  "files": [],
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.d.ts", "supabase/functions/**/*.ts"], // Include Supabase functions
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": ["ESNext", "DOM", "DOM.Iterable"], // Remove deno.ns from libs
    "types": ["node"], // Remove deno.ns from types
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "allowJs": true,
    "noUnusedLocals": false,
    "strictNullChecks": false
  }
}
